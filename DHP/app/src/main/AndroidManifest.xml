<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amir.dhp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".FocoMainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".FocoMenuActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".FocoMealActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".CollisMainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".CollisMenuActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".CollisMealActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".HopMainActivity" android:screenOrientation="portrait"/>
        <activity android:name=".HopMenuActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".HopMealActivity" android:screenOrientation="portrait" android:windowSoftInputMode="adjustPan"/>

        <activity android:name=".MenuItemDisplayActivity" android:screenOrientation="portrait"/>

        <activity android:name=".CrowdedActivity" android:screenOrientation="portrait"/>
    </application>

</manifest>
